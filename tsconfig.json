    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "rootDir": ".",
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "noLib": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "experimentalDecorators": true
