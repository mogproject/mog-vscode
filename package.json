{
    "name": "mog-vscode",
    "displayName": "mog-vscode",
    "description": "",
    "version": "0.0.1",
    "publisher": "mogproject",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/mogproject/mog-vscode"
    },
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "keybindings": [
            // mark mode
            { "key": "ctrl+space", "command": "mog.enterMarkMode", "when": "editorTextFocus" },
            { "key": "escape", "command": "mog.exitMarkMode", "when": "editorTextFocus && !suggestWidgetVisible" },

            { "key": "ctrl+x h", "command": "editor.action.selectAll", "when": "editorTextFocus" },

            // cursor moves
            { "key": "up",     "command": "mog.cursorUp",     "when": "editorTextFocus && !suggestWidgetVisible" },
            { "key": "ctrl+P", "command": "mog.cursorUp",     "when": "editorTextFocus && !suggestWidgetVisible" },
            { "key": "down",   "command": "mog.cursorDown",   "when": "editorTextFocus && !suggestWidgetVisible" },
            { "key": "ctrl+N", "command": "mog.cursorDown",   "when": "editorTextFocus && !suggestWidgetVisible" },
            { "key": "left",   "command": "mog.cursorLeft",   "when": "editorTextFocus && !suggestWidgetVisible" },
            { "key": "ctrl+B", "command": "mog.cursorLeft",   "when": "editorTextFocus && !suggestWidgetVisible" },
            { "key": "right",  "command": "mog.cursorRight",  "when": "editorTextFocus && !suggestWidgetVisible" },
            { "key": "ctrl+F", "command": "mog.cursorRight",  "when": "editorTextFocus && !suggestWidgetVisible" },
            { "key": "home",   "command": "mog.cursorHome",   "when": "editorTextFocus && !suggestWidgetVisible" },
            { "key": "ctrl+A", "command": "mog.cursorHome",   "when": "editorTextFocus && !suggestWidgetVisible" },
            { "key": "end",    "command": "mog.cursorEnd",    "when": "editorTextFocus && !suggestWidgetVisible" },
            { "key": "ctrl+E", "command": "mog.cursorEnd",    "when": "editorTextFocus && !suggestWidgetVisible" },
            { "key": "Alt+B", "command": "mog.cursorWordLeft",   "when": "editorTextFocus && !suggestWidgetVisible" },
            { "key": "Alt+F",  "command": "mog.cursorWordRight",  "when": "editorTextFocus && !suggestWidgetVisible" },
            { "key": "pagedown", "command": "mog.scrollPageDown", "when": "editorTextFocus && !suggestWidgetVisible" },
            { "key": "ctrl+V", "command": "mog.scrollPageDown", "when": "editorTextFocus && !suggestWidgetVisible" },
            { "key": "ctrl+V", "command": "selectNextPageSuggestion", "when": "editorTextFocus && suggestWidgetVisible" },
            { "key": "pageup",  "command": "mog.scrollPageUp",   "when": "editorTextFocus && !suggestWidgetVisible" },
            { "key": "alt+V",  "command": "mog.scrollPageUp",   "when": "editorTextFocus && !suggestWidgetVisible" },
            { "key": "alt+V", "command": "selectPrevPageSuggestion", "when": "editorTextFocus && suggestWidgetVisible" },
            { "key": "alt+shift+,", "command": "mog.cursorTop",    "when": "editorTextFocus && !suggestWidgetVisible" },
            { "key": "alt+shift+.", "command": "mog.cursorBottom", "when": "editorTextFocus && !suggestWidgetVisible" },

            // advanced editing
            { "key": "alt+d", "command": "deleteWordRight", "when": "editorTextFocus" },
            { "key": "ctrl+alt+o", "command": "editor.action.insertLineBefore", "when": "editorTextFocus" },

            // undo/redo
            { "key": "ctrl+x u", "command": "undo", "when": "editorTextFocus"},
            { "key": "ctrl+/", "command": "undo", "when": "editorTextFocus"},

            // copy/paste
            { "key": "ctrl+w",       "command": "mog.editor.action.clipboardCutAction",  "when": "editorTextFocus"},
            { "key": "alt+w",        "command": "mog.editor.action.clipboardCopyAction", "when": "editorTextFocus"},
            { "key": "ctrl+y",       "command": "editor.action.clipboardPasteAction", "when": "editorTextFocus"},
            { "key": "ctrl+shift+d", "command": "mog.editor.action.duplicateAction", "when": "editorTextFocus"},
            { "key": "ctrl+j",       "command": "editor.action.triggerSuggest", "when": "editorTextFocus" },
            { "key": "ctrl+k",       "command": "mog.editor.action.killLineAction", "when": "editorTextFocus" },

            // comments
            { "key": "alt+-",        "command": "editor.action.commentLine", "when": "editorTextFocus" },
            { "key": "ctrl+shift+/", "command": "editor.action.commentLine", "when": "editorTextFocus" },

            // navigations
            { "key": "alt+g g", "command": "workbench.action.gotoLine" },
            { "key": "ctrl+s", "command": "editor.action.nextMatchFindAction" },
            { "key": "ctrl+r", "command": "emacs.editor.action.previousMatchFindAction" },

            // cancellations
            { "key": "ctrl+g", "command": "closeReferenceSearchEditor", "when": "searchViewletVisible" },
            { "key": "ctrl+g", "command": "hideSuggestWidget", "when": "editorTextFocus && suggestWidgetVisible" },
            { "key": "ctrl+g", "command": "closeFindWidget", "when": "editorTextFocus && findWidgetVisible" },
            { "key": "ctrl+g", "command": "mog.exitMarkMode", "when": "editorTextFocus && !suggestWidgetVisible"},

         
            // file/window operations
            {"key": "ctrl+x k","command": "workbench.action.closeActiveEditor","when": "editorTextFocus"},
            {"key": "command+w","command": "workbench.action.closeActiveEditor","when": "editorTextFocus"},
            {"key": "ctrl+x b","command": "workbench.action.openPreviousEditor"},
            {"key": "ctrl+x ctrl+s","command": "workbench.action.files.save"},
            {"key": "ctrl+x s","command": "workbench.action.files.saveAll"},
            {"key": "ctrl+x ctrl+c","command": "workbench.action.closeWindow"},
            {"key": "ctrl+x 3","command": "workbench.action.splitEditor"},
            {"key": "ctrl+x ctrl+f","command": "workbench.action.files.openFileFolder"},
            {"key": "ctrl+x o","command": "workbench.action.navigateEditorGroups","when": "editorTextFocus"},
            {"key": "ctrl+x p","command": "workbench.action.previousEditor","when": "editorTextFocus"},
            {"key": "ctrl+pageup","command": "workbench.action.previousEditor","when": "editorTextFocus"},
            {"key": "ctrl+x n","command": "workbench.action.nextEditor","when": "editorTextFocus"},
            {"key": "ctrl+pagedown","command": "workbench.action.nextEditor","when": "editorTextFocus"},

            // code formatter
            {"key": "ctrl+l","command": "editor.action.format","when": "editorTextFocus"},
        
            // Run tasks
            {"key": "alt+enter","command": "workbench.action.tasks.test","when": "editorTextFocus"}
        ]
    },
    "scripts": {
        "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
        "compile": "node ./node_modules/vscode/bin/compile -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^1.8.5",
        "vscode": "^0.11.0",
        "copy-paste": "^1.3.0"
    }
}